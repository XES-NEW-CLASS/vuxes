{
  "name": "vuxes",
  "version": "0.0.1",
  "description": "学而思新课堂Vue组件库",
  "main": "lib/vuxes.common.js",
  "style": "lib/theme-default/index.css",
  "author": "XES-Team",
  "private": false,
  "keywords": [
    "vuxes",
    "vue",
    "component",
    "ui",
    "framework",
    "xes"
  ],
  "files": [
    "lib",
    "src",
    "packages"
  ],
  "scripts": {
    "init": "# 项目初始化(第一次调用) \n\t npm install commitizen -g && commitizen init cz-conventional-changelog --save-dev --save-exact && npm run bootstrap",
    "bootstrap": "# 安装依赖 \n\t npm install && cd ./packages/theme-default && npm install",
    "dev": "npm run build:entry && vue-cli-service serve",
    "lint": "vue-cli-service lint --fix",
    "lib": "# 构建库 \n\t vue-cli-service build --target lib --name vuxes --dest lib packages/index.js",
    "clean": "# 清空库文件 \n\t rimraf lib && rimraf packages/*/lib",
    "dev:style": "# 实时编译css \n\t gulp --gulpfile packages/theme-default/gulpfile.js",
    "build:docs": "# 构建文档 \n\t vue-cli-service build",
    "build:entry": "# 创建组件入口文件 \n\t node build/build-entry.js ",
    "build:lib": "# 发布准备 \n\t node build/build-lib.js ",
    "build:style": "# 构建样式文件 \n\t gulp build --gulpfile ./packages/theme-default/gulpfile.js && cp-cli packages/theme-default/lib lib/theme-default",
    "publish:docs": "# 发布文档 \n\t node build/publish-docs.js",
    "deploy": "# 发布组件库 \n\t sh build/release.sh",
    "release": "standard-version",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "vue": "^2.6.11",
    "vue-router": "^3.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-eslint": "^4.2.0",
    "@vue/cli-plugin-unit-jest": "^4.2.0",
    "@vue/cli-service": "^4.2.0",
    "@vue/eslint-config-standard": "^5.1.0",
    "@vue/test-utils": "1.0.0-beta.31",
    "babel-eslint": "^10.0.3",
    "babel-plugin-component": "^1.1.1",
    "commitizen": "^4.0.3",
    "cp-cli": "^2.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.1.2",
    "fs-extra": "^7.0.1",
    "gh-pages": "^2.2.0",
    "highlight.js": "^9.18.1",
    "husky": "^4.2.3",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.2.1",
    "markdown-it-container": "^2.0.0",
    "markdown-it-decorate": "^1.2.2",
    "markdown-it-task-checkbox": "^1.0.6",
    "shelljs": "^0.8.3",
    "signale": "^1.4.0",
    "standard-version": "^7.1.0",
    "uppercamelcase": "^3.0.0",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.6.11"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js,!build/*": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
